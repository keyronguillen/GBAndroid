<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo.TodoItemPage" Title="{Binding Name}">
	<StackLayout Margin="20" VerticalOptions="StartAndExpand">
		<Label Text="Name" />
		<Entry AutomationId="entryName" Text="{Binding Name}" />
		<Label Text="Notes" />
        <Entry AutomationId="entryNotes" Text="{Binding Notes}" />
		<Label Text="Done" />
        <Switch AutomationId="switchDone" IsToggled="{Binding Done}" />
        <Button AutomationId="buttonSave" Text="Save" Clicked="OnSaveClicked" />
        <Button AutomationId="buttonDelete" Text="Delete" Clicked="OnDeleteClicked" />
        <Button AutomationId="buttonCancel" Text="Cancel" Clicked="OnCancelClicked" />
		<!--Button Text="Speak" Clicked="OnSpeakClicked" /-->
        <Label Text="Esto es una demo de Xamarin" />
	</StackLayout>
</ContentPage>